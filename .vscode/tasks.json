  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git Add and Commit",
      "type": "shell",
      "command": "git add . && git commit -m '${input:commitMessage}'",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Введите сообщение для коммита"
    }
  ]
}